<ui:BasicWindow
    xmlns:ui="clr-namespace:Hummingbird.UI;assembly=Hummingbird.UI" x:Class="Hummingbird.CustomTools.WindowInputPassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hummingbird.CustomTools" IsTitleHighlighted="True"
             mc:Ignorable="d" Width="350" Height="200">
    <StackPanel>
        <TextBlock Text="Please input the protection password for this PFX/PKCS#12 certificate:" TextWrapping="Wrap" Style="{DynamicResource TextBlockInformation}" Margin="{DynamicResource HeaderMargin}"  />
        <PasswordBox Margin="10" x:Name="txtPassword" />
        <Button Content="OK" HorizontalAlignment="Right" Style="{DynamicResource DialogButton}" Click="Button_Click" />
    </StackPanel>
</ui:BasicWindow>
